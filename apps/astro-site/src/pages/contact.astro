---
// Static, base-aware redirect to About for GitHub Pages/custom-domain compatibility
import { withBase } from '../lib/url';
const dest = withBase('about');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="refresh" content={`0;url=${dest}`} />
    <link rel="canonical" href={dest} />
    <title>Redirectingâ€¦</title>
    <script is:inline>
      {
        `location.replace(${JSON.stringify(dest)})`;
      }
    </script>
  </head>
  <body>
    <p>If you are not redirected automatically, <a href={dest}>click here</a>.</p>
  </body>
</html>
