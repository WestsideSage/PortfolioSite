---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { withBase } from '../lib/url';

const posts = await getCollection('blog');
const recentPosts = posts
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);
---

<Layout
  title="Maurice Calloway's Domain"
  description="Here you can find my latest blog posts, projects, and more."
  showIntro={true}
>
  <main class="container mx-auto px-4 py-8">
    <div class="flex min-h-[60vh] flex-col items-center justify-center text-center">
      <h1 class="text-6xl font-bold tracking-tighter">
        Welcome to my <span class="text-gradient">Domain</span>
      </h1>
      <p class="mt-4 text-xl text-muted-foreground max-w-2xl">
        Here you can find my latest Scrolls, projects, and more. Explore my work and get to know me
        better!
      </p>
      <div class="mt-8 flex gap-4">
        <a
          href={withBase('blog')}
          class="rounded-lg bg-primary px-6 py-3 text-primary-foreground hover:bg-primary/90 transition-colors"
        >
          Read the Sage Scrolls
        </a>
        <a
          href="https://github.com/WestsideSage"
          class="rounded-lg border border-input px-6 py-3 hover:bg-accent hover:text-accent-foreground transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
          GitHub
        </a>
      </div>
    </div>

    {
      recentPosts.length > 0 && (
        <section class="mt-16">
          <div class="text-center mb-8">
            <h2 class="text-3xl font-bold mb-4">My latest Scrolls</h2>
            <p class="text-muted-foreground">Check out some of my most recent Scrolls</p>
          </div>

          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {recentPosts.map((post) => (
              <article class="bg-card rounded-lg shadow-md p-6 hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
                <h3 class="text-xl font-semibold mb-2">
                  <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                    {post.data.title}
                  </a>
                </h3>
                <p class="text-muted-foreground mb-4 text-sm line-clamp-3">
                  {post.data.description}
                </p>
                <div class="flex items-center justify-between text-xs text-muted-foreground">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric',
                    })}
                  </time>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <span class="px-2 py-1 bg-secondary text-secondary-foreground rounded">
                      {post.data.tags[0]}
                    </span>
                  )}
                </div>
              </article>
            ))}
          </div>

          <div class="text-center mt-8">
            <a
              href={withBase('blog')}
              class="inline-flex items-center text-primary hover:underline"
            >
              View all Scrolls
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        </section>
      )
    }
  </main>
</Layout>

<style>
  .text-gradient {
    background-image: linear-gradient(
      135deg,
      hsl(142, 18%, 38%) 0%,
      hsl(156, 50%, 45%) 50%,
      hsl(142, 12%, 58%) 100%
    );
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    -webkit-text-fill-color: transparent;
  }
</style>
