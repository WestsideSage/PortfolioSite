{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "outputs": [],
      "dependsOn": []
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx",
        "**/*.test.*"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
